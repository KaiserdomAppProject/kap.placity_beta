<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_list"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="startGame"
        android:src="@drawable/ic_scan_dark"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Scanne einen Barcode von der Webseite oder deiner Gamecard um ein Spiel herunterzuladen (Hierzu ist eine bestehende Internetverbindung nötig. Je nach gewähltem Spiel können mehrere MB enthalten sein. Wlan-Verbindung empfohlen!)" />

</RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_start"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:src="@drawable/mannemer_header" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="showInfo"
            android:paddingRight="5dp"
            android:src="@drawable/ic_info_dark" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="startOffline"
            android:paddingRight="5dp"
            android:src="@drawable/ic_list_dark" />
        
        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="startScan"
        android:paddingRight="5dp"
        android:src="@drawable/ic_scan_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_marginBottom="15dp"
        android:background="@color/back_text"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/welcome"
        android:textColor="@color/text_dark"
        android:textColorHint="@color/text_dark"
        android:textColorLink="@color/text_link" />

</RelativeLayout>